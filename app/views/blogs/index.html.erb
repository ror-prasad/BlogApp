<div class='col-sm-9'></div>
<div class='col-sm-3'>Sort By: 
  <%= link_to 'Popular', sort_blog_path('popular', search: params[:search]) %> |
  <%= link_to 'Latest', sort_blog_path('latest', search: params[:search]) %> |
  <%= link_to 'Oldest', sort_blog_path('oldest', search: params[:search]) %>
</div>
<div class="col-sm-3 sidenav">
      <h3>MyBlog</h3>
      <br>
      <div class="form-group">
        <%= form_tag(blogs_path, method: :get, id: "search-form") do %>
        <span>
          <%= text_field_tag :search, params[:search], placeholder: "Search Title", class: "form-control" %>
        </span>
        <span>
          <%= submit_tag "Search", class: "btn btn-info btn-sm btn-align" %>
        </span>
        <% end %>
      </div>
    </div>
<div class="col-sm-9">
<% @blogs.each do |blog| %>
  <blockquote class="blockquote">
    <h3><%= link_to blog.title, blog %></h3>
    <h6><%= blog.created_at.strftime('%B %d %Y') %></h6>
  </blockquote>
<% end %>
<%= link_to 'New Blog', new_blog_path,  class: "btn btn-success btn-sm" %>
</div>


