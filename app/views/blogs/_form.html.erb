  <% if @blog.errors.any? %>
    <div id="alert alert-danger">
      <ul>
        <% @blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_for @blog do |f| %>
  <form class="form-horizontal">
  <div class="row form-group">
    <label class="col-xs-1">Title :</label>
    <div class="col-xs-7">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="row form-group">
    <label class="col-xs-1">Body :</label>
    <div class="col-xs-9">
      <%= f.text_area :body, rows: 4, class: 'form-control' %>
    </div>
  </div>
  <div class="row form-group">
    <label class="control-label col-xs-1"></label>
    <div class="col-xs-1">
      <%= f.submit 'Submit Blog', class: 'btn btn-success btn-sm' %>
    </div>
    <div class="col-xs-1">
      <%= link_to 'Cancel', blogs_path, class: "btn btn-info btn-sm btn-space" %>
    </div>
  </div>
  </form>
<% end %>